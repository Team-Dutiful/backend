{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@controller/*": ["src/controller/*"],
      "@db/*": ["src/db/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@type/*": ["src/type/*"]
    },
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "typeRoots": ["@types", "./node_modules/@types"]
}
